{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "node_modules/@types",
    ]
  },
  "include": ["./src/**/*.ts", "./src/**/*.test.tsx", "src/utils/menu-items-list.tsx", "src/helpers/constants/columns-table-tasks.tsx", "src/app/components/task/list/ExportCsv/ExportCsv.tsx"]
}
